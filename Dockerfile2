FROM ubuntu:22.04

# Defina o fuso horário para evitar a interação
ENV DEBIAN_FRONTEND=noninteractive
RUN ln -fs /usr/share/zoneinfo/America/Sao_Paulo /etc/localtime && \
    apt-get update && apt-get install -y tzdata && \
    dpkg-reconfigure --frontend noninteractive tzdata

# Instale dependências
RUN apt-get update && apt-get install -y \
    python3-dev \
    python3-babel \
    python3-venv \
    uwsgi \
    uwsgi-plugin-python3 \
    git \
    build-essential \
    libxslt-dev \
    zlib1g-dev \
    libffi-dev \
    libssl-dev \
    sudo \
    wget \
    curl \
    systemctl \
    python-is-python3

# Crie um usuário para o SearXNG se ele ainda não existir
RUN id -u searxng || useradd --shell /bin/bash --system --home-dir "/usr/local/searxng" --comment 'Privacy-respecting metasearch engine' searxng
RUN mkdir "/usr/local/searxng" && chown -R "searxng:searxng" "/usr/local/searxng"

# Clone o repositório apenas se ele ainda não estiver clonado
WORKDIR /usr/local/searxng
RUN [ ! -d searxng-src ] && git clone https://github.com/lfelipeapo/searxng.git searxng-src || echo "Repositório já clonado."

# Instale o SearXNG
WORKDIR /usr/local/searxng/searxng-src
RUN sudo -H -u searxng -i \
    python3 -m venv "/usr/local/searxng/searx-pyenv" && \
    echo ". /usr/local/searxng/searx-pyenv/bin/activate" >> "/usr/local/searxng/.profile" && \
    . /usr/local/searxng/.profile && \
    pip install -U pip && \
    pip install -U setuptools && \
    pip install -U wheel && \
    pip install -U pyyaml && \
    pip install -r requirements.txt && \
    pip install --use-pep517 --no-build-isolation -e .

# Configure o SearXNG
RUN sudo -H mkdir -p "/etc/searxng" && \
    cp "/usr/local/searxng/searxng-src/utils/templates/etc/searxng/settings.yml" "/etc/searxng/settings.yml"

# Verifique e mova a configuração do uwsgi para o diretório correto, se existir
RUN if [ -d "/usr/local/searxng/searxng-src/etc/uwsgi" ]; then \
        mkdir -p /etc/uwsgi && cp -r /usr/local/searxng/searxng-src/etc/uwsgi/* /etc/uwsgi/; \
    fi

# Exponha a porta necessária
EXPOSE 8080

# Comando para iniciar o serviço
CMD ["uwsgi", "--ini", "/etc/uwsgi/uwsgi.ini"]
